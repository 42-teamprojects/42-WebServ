
<server>
    port = 8080
    host = 127.0.0.1
    server_name = localhost
    error_page = 404 /error/404.html
    client_max_body_size = 1024
    root = path/to/folder
    index = index.html file.html

    <route path="/page">
        autoindex = on 
        allow_methods = POST GET
        index = index.php index.html
        return = redir/index.html
    </route>

    <route path="cgi-bin">
        cgi-ext = .py .sh
    </route>

</server>


