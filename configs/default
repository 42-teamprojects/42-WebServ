<server>
    host = 127.0.0.1
    port = 80
    server_names = localhost
    client_max_body_size = 100000
    error_pages = 404:static/error_pages/404.html 500:static/error_pages/500.html
    root = static
    allow_listing = true
    <route path="/test">
        root = src
    </route>
    <route path="/kapouet">
        root = static/error_pages
    </route>
    <route path="/cgi">
        root = static/cgi-bin
        methods = GET, POST
        cgi_extension = .py 
        cgi_path = /Library/Frameworks/Python.framework/Versions/3.11/bin/python3
    </route>
    <route path="/method">
        methods = POST
    </route>
    <route path="/redirect">
        redirect = index.html
    </route>
</server>

