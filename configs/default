<server>
    host = 127.0.0.1
    port = 80
    server_names = localhost
    client_max_body_size = 100000000000
    error_pages = 404:www/error_pages/404.html 500:www/error_pages/500.html
    root = www
    allow_listing = true
    <route path="/test">
        root = src
    </route>
    <route path="/kapouet">
        root = www/error_pages
    </route>
    <route path="/cgi">
        root = www/cgi-scripts
        methods = GET, POST, DELETE
        cgi = .php:cgi-bin/php-cgi, .py:/Library/Frameworks/Python.framework/Versions/3.11/bin/python3
    </route>
    <route path="/method">
        methods = POST
    </route>
    <route path="/redirect">
        redirect = /index.html
    </route>
    <route path="/uploads">
        root = www/uploads
        methods = POST, GET
        upload_dir = www/uploads/uploads
    </route>
    <route path="/post">
        root = www/cgi-scripts
        methods = POST
        index = post.php
        cgi = .php:cgi-bin/php-cgi
    </route>
    <route path="/delete">
        methods = DELETE
        root = www/uploads/uploads
    </route>
</server>

