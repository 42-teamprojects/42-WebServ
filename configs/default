    host = 192.168.1.103
    port = 80
    server_names = localhost youssef.com isawi.me
    client_max_body_size = 100
    error_pages = 404.html 500.html
    root = static/QuizApp
    index = index.html
</server>

<server>
    host = 127.0.0.1
    port = 3000
    server_names = localhost
    client_max_body_size = 100000
    error_pages = 404.html 500.html
    root = static
    index = error_pages/404.html
    <route path="/index">
        methods = GET, POST
        cgi_extension = .php 
        cgi_path = /usr/bin/php
    </route>
    <route path="/images">
        methods = GET
        root = /var/www/images
        index = images.html
        allow_listing = false
    </route>
    <route path="/uploads">
        methods = POST
        upload_dir = /var/www/uploads
    </route>
    <route path="/redirect">
        methods = GET
        redirect = index.html
    </route>
</server>