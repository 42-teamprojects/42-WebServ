<server>
    host = 127.0.0.1
    port = 80
    server_names = localhost
    client_max_body_size = 100000
    error_pages = 404.html 500.html
    root = static
    index = index.html
    allow_listing = true
    <route path="/method">
        methods = POST
    </route>
    <route path="/redirect">
        redirect = index.html
    </route>
    <route path="/301">
        root = static/error_pages
        allow_listing = true
    </route>
</server>

