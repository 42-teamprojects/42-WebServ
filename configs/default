<server>
    host = 127.0.0.1
    port = 80
    server_names = localhost
    client_max_body_size = 100000
    error_pages = 404:www/error_pages/404.html 500:www/error_pages/500.html
    root = www
    allow_listing = true
    <route path="/test">
        root = src
    </route>
    <route path="/kapouet">
        root = www/error_pages
    </route>
    <route path="/cgi">
        root = www/cgi-bin
        methods = GET, POST, DELETE
        cgi = .php:/usr/local/bin/php
    </route>
    <route path="/method">
        methods = POST
    </route>
    <route path="/redirect">
        redirect = index.html
    </route>
    <route path="/uploads">
        methods = POST
        upload_dir = www/uploads/uploads
    </route>
    <route path="/post">
        root = www/cgi-bin
        methods = POST
        index = post.php
        cgi = .php:/usr/local/bin/php
    </route>
</server>

