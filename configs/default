<server>
    host = 127.0.0.1
    port = 3000
    server_names = localhost
    client_max_body_size = 100000
    error_pages = 404:static/error_pages/404.html
    root = static
    allow_listing = true
    <route path="/index">
        methods = GET, POST
        cgi_extension = .php 
        cgi_path = /usr/bin/php
    </route>
    <route path="/images">
        methods = GET
        root = /var/www/images
        index = images.html
        allow_listing = false
    </route>
    <route path="/uploads">
        methods = POST
        upload_dir = /var/www/uploads
    </route>
    <route path="/redirect">
        methods = GET
        redirect = index.html
    </route>
</server>